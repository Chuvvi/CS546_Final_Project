<div>
    <div class="searchBar">
        <form class="searchThread" id="searchThread">  
            <button type="submit" class="btn" id="searchButton">Search:</button>
            <label for="searchText"></label>
            <input type="text" id="searchText">
        </form>
    </div>
    <div id="searchResult" hidden>

    </div>
    <h1>Make Thread</h1>
    <div class="newThread">
        <form class = "newThread" id="newThreadForm" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>
            <div>
                <label for="text">Thread Text:</label>
                <textarea name="text" id="text" cols="50" rows="7"></textarea>
            </div>
            <button type="submit" id="forumButton" class="btn">Post</button>
        </form>
    </div>
    <br>

    <div class="error">
        <div id="errorLabel">{{error}}</div>
    </div>

    <div id="threadList">

    </div>

    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
    crossorigin="anonymous"></script>
    <script src="/public/js/threads.js"></script>
</div>