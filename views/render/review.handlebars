<div class="row">
    <div class="col-sm-12">
        <h1 class="main-text">{{title}}</h1>
        <main>
            <dl>
                <dt>Title</dt>
                <dd>{{post.title}}</dd>
                <dt>Posted Date</dt>
                <dd>{{post.postedDate}}</dd>               
                <dt>Category</dt>
                <dd>{{post.category}}</dd>
                <dt>Rating</dt>
                <dd>{{post.rating}}</dd>
                <dt>Review</dt>
                <dd>{{post.review}}</dd>
            </dl>

            <div class="form-container">
                <form id="likeForm" {{{showLike}}}>
                    <div class="form-group">
                        <input id="like_id" value="{{postId}}" hidden></input>
                        <button type="submit" class="btn btn-default">
                            {{post.vote}}
                        </button>
                    </div>
                </form>
                <form id="dislikeForm" {{{showDislike}}}>
                    <div class="form-group">
                        <input id="dislike_id" value="{{postId}}" hidden></input>
                        <button type="submit" class="btn btn-default">
                            {{post.vote}}
                        </button>
                    </div>
                </form>

                <form id="commentForm">
                    <div class="form-group">
                        <label id="formLabel" for="comment_input">Comment</label>
                        <textarea class="form-control" id="comment_input" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </form>
            </div>
            <div class="error">
                <label for="errorLabel" id="errorLabel">{{error}}</label>
            </div>
            <a href="/feed">Go back</a>
        </main>
    </div>
</div>