<div>
    <h1>Edit Profile</h1>
    <form action="/editprofile" id="editProfile" method="POST">

        <div class="firstName">
            <label for="firstName">New First Name</label>
            <input type="text" name="firstName" id="firstName" placeholder="Enter New First Name">
        </div>
        <div class="lastName">
            <label for="lastName">New Last Name</label>
            <input type="text" name="lastName" id="lastName" placeholder="New Enter Last Name">
        </div>
        <div class="email">
            <label for="email">New Email</label>
            <input type="email" name="email" id="email" placeholder="New Enter Email">
        </div>
        <div class="password">
            <label for="password">New Password</label>
            <input type="password" name="password" id="password" placeholder="Enter New Password">
        </div>
        <div class="confirmPassword">
            <label for="confirmPassword">Confirm New Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm New Password">
        </div>
        <div class="gender">
            <label for="gender">New Gender</label>
            <input type="text" name="gender" id="gender" placeholder="Enter New Gender">
        </div>
        <div class="city">
            <label for="city">New City</label>
            <input type="text" name="city" id="city" placeholder="Enter New City">
        </div>
        <div class="state">
            <label for="state">New State</label>
            <input type="text" name="state" id="state" placeholder="Enter New State">
        </div>
        <div class="age">
            <label for="age">New Age</label>
            <input type="text" name="age" id="age" placeholder="Enter New Age">
        </div>

        <button id="btn">Update</button>
    </form>
    <div class="error">
        <div class="errorLabel">{{msg}}</div>
    </div>
</div>