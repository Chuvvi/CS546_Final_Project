<div>
    <h1>
        Runner's Lobby
    </h1>
    <div class="searchBar">
        <form class="searchThread" id="searchThread">  
            <button type="submit" class="btn" id="searchButton">Search:</button>
            <input type="text" id="searchText">
        </form>
    </div>
    <div id="searchResult" hidden>
    </div>
    <div class="newPost">
        <form class="newPost" id="newPostForm">
            <div id="titleDiv">
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>
            <div id="catDiv">
                <label for="cat">Category</label>
                <input type="text" id="cat" name="cat">
            </div>
            <div id="ratingDiv">
                <label for="rating">Rating</label>
                <input type="number" id="rating" name="rating">
            </div>
            <div>
                <label for="review">Review</label>
                <textarea name="review" id="review" cols="50" rows="10"></textarea>
            </div>
            <button class="btn" id="submit">Post</button>
        </form>
    </div>

    <div class="error">
        <div id="errorlabel" for="error"></div>
    </div>

    <div id="feed">

    </div>

    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
    crossorigin="anonymous"></script>
    <script src="/public/js/reviews.js"></script>

</div>