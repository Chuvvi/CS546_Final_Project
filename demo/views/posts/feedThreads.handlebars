<head>
    <meta charset="utf-8">
    <title>threads</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>

<body>
    <h1>feed threads</h1>
    <article>
        <ul>
            <li>username: {{username}}</li>
        </ul>
        <form action="/postthreads" method="POST"  id="newThreads">
            <div id="title">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{title}}">
            </div>
            <div>
                <label for="threads">threads</label>
                <textarea name="threads" id="threads" cols="50" rows="10" value="{{text}}"></textarea>
            </div>
            <button type="submit" id="btn">Post</button>
        </form>
        <a href="/threads">Go to threads page</a>
        <a href="/logout">Logout</a>
        </div>
    </article>

</body>